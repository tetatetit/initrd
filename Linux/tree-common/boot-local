# -*- shell-script -*-


mountroot() {
    load_btrfs_ko
    if [ "$root" = "/dev/nbd0" ]; then
	attach_nbd_device 0
	mount_nbd 0 "${rootmnt}"
	if [ "$(get_any SKIP_OPTIONAL_NBD_DEVICES)" != "1" ]; then
	    attach_secondary_nbd_devices
	fi
	show_nbd_devices
    else
	log_begin_msg "Mounting local disk: ${root}"
	emount "${root}" "${rootmnt}"
	log_end_msg
    fi
}
